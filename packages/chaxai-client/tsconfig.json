{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@chaxai-common": ["../chaxai-common/dist/index"],
      "@chaxai-common/*": ["../chaxai-common/dist/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../chaxai-common/tsconfig.json" }],
  "exclude": ["node_modules", "dist"]
}
